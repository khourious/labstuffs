#!/bin/bash

# author: Laise de Moraes <laisepaixao@live.com>
# institution: Oswaldo Cruz Foundation, Gon√ßalo Moniz Institute, Bahia, Brazil
# URL: https://lpmor22.github.io
# date: 30 MAY 2021

THREADS="$(lscpu | grep 'CPU(s):' | awk '{print $2}' | sed -n '1p')"

INPUT=$(basename "$1")

OUTPUT=$(basename "${INPUT}" | cut -d. -f1)

source activate phy

nohup iqtree -T ${THREADS} -nt AUTO -bb 1000 -bnni -m TEST -s ${INPUT}

mv nohup.out ${OUTPUT}_log.txt
