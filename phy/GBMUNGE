# date: 10 JUN 2021

background() {

    start=$(date +%s.%N)

    THREADS=$(lscpu | grep 'CPU(s):' | awk '{print $2}' | sed -n '1p')

    INPUT=$1

    OUTPUT=$(basename ${INPUT%.*})

    source activate phy

    gbmunge -s -i $INPUT -f $OUTPUT.fasta -o $OUTPUT.txt

    end=$(date +%s.%N)

    runtime=$(python -c "print(${end} - ${start})")

    echo "" && echo "Done. The runtime was $runtime seconds."

}

background $1 >/dev/null 2>&1 &
