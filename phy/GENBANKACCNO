INPUT=$(basename "$1")

OUTPUT=$(basename "${FILE}" | cut -d. -f1)

source activate phy

nohup grep -o -E "^>\w+" ${INPUT} | tr -d ">" > ${OUTPUT}.accNo.txt

rm -rf nohup.out
