#!/bin/bash

csv="$1"

fastq_pass="$2"

library=`echo "$csv" | sed -e 's/\.csv//g' -e 's/.*\///g'`

[ ! -d $HOME/WGS/LIBRARIES/"$library" ] && mkdir $HOME/WGS/LIBRARIES/"$library" -pv

mkdir $HOME/WGS/LIBRARIES/"$library"/RAMPART

cd $HOME/WGS/LIBRARIES/"$library"/RAMPART

for i in `cat "$csv"`

	do

		pathref=`echo "$i" | awk -F"," '{print $3}' | sed '/^$/d'`

		ref=`echo "$pathref" | sed -e 's/\/.*//g'`

	done

source activate rampart

rampart --protocol $HOME/WGS/RAMPART/"$ref" --basecalledPath "$fastq_pass" --annotatedPath RAMPART --clearAnnotated
