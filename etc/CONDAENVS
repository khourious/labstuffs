if [[ -z "$(which mamba)" ]]; then
    conda install -y -c conda-forge mamba
    mamba update -y -n base conda
    mamba create -y -n phy -c conda-forge -c bioconda -c defaults gbmunge iqtree mafft seqkit
else
    mamba update -y -n base conda
    mamba create -y -n phy -c conda-forge -c bioconda -c defaults gbmunge iqtree mafft seqkit
fi
